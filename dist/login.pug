html
  head
    title Login
    link(rel="stylesheet" href="../../stylereset.css")
    link(rel="stylesheet" href="../../static.css")
    script(src="../../scripts/helpers.js")
    script(src="../../scripts/eventHandlers.js")
    script(src="../../scripts/landingPage.js")

  body
    div#header
    div#auth-form
     img(src="../large-logo.png" alt="Smiley face" height="174" width="180" id="large-logo")
     div#input-wrapper
        p#form-title Log in
        div#input-header
        div#username-input
          label(for='username') Username
          br
          input(id="username-field" type="text")
          br
        div#password-input
          label(for='password') Password
          br
          input#password(type='password', name='password')
        div#log-in-btn
          br
          button#login-btn(type='submit') Login
        div#input-footer
